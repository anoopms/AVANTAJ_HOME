<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/plainwhitebackground"
    android:gravity="center" >
    <ImageView 
        
	    android:id="@+id/leaf1"
	    android:layout_width="wrap_content"
   			 android:layout_height="wrap_content"
   			android:background="@drawable/leaf1"
   			 android:layout_gravity="center"
   			  
	    />
    <ImageView 
       
	    android:id="@+id/leaf2"
	    android:layout_width="wrap_content"
   			 android:layout_height="wrap_content"
   			android:background="@drawable/leaf2"
   			 android:layout_gravity="center"
   			  
	    />
    <ImageView 
      
	    android:id="@+id/leaf3"
	    android:layout_width="wrap_content"
   			 android:layout_height="wrap_content"
   			android:background="@drawable/leaf3"
   			 android:layout_gravity="center"
   			  
	    />
    <ImageView 
       
	    android:id="@+id/company"
	    android:layout_width="wrap_content"
   		android:layout_height="wrap_content"
   		android:background="@drawable/avantajname"
   			 
   			  
	    />
    <ImageView 
        
	    android:id="@+id/solution"
	    android:layout_width="wrap_content"
   	    android:layout_height="wrap_content"
   		android:background="@drawable/software"
   			 			  
	    />

</LinearLayout>